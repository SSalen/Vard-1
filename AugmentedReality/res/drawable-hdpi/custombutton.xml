<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
        
         <stroke android:width="2dip" android:color="@android:color/holo_blue_dark" />
         <gradient android:angle="-90" android:startColor="@android:color/holo_blue_light" android:endColor="@android:color/holo_blue_dark"  />            
     </shape>
 </item>

 
<item >
    <shape android:shape="rectangle"  >
         
         <stroke android:width="2dip" android:color="@android:color/holo_blue_light" />
         <gradient android:angle="-90" android:startColor="@android:color/holo_blue_bright" android:endColor="@android:color/holo_blue_light" />            
     </shape>
 </item>
</selector>

